{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "email/templates/**/*",
        "outDir": "dist"
      },
      {
        "include": "views/**/*",
        "outDir": "dist"
      }
    ]
  }
}
